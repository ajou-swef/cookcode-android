<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_component_clicked">

        <ImageView
            android:id="@+id/blue_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/blue_check"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/made_user"/>

        <TextView
            android:id="@+id/made_user"
            android:text="haeiny"
            android:textColor="@color/main_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blue_check"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintBottom_toTopOf="@+id/like"/>

        <ImageView
            android:id="@+id/like_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/like_mark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/like"/>

        <TextView
            android:id="@+id/like"
            android:text="@string/like"
            android:textColor="@color/main_theme"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/made_user"
            app:layout_constraintStart_toEndOf="@+id/like_mark"
            app:layout_constraintBottom_toTopOf="@+id/view"/>

        <TextView
            android:id="@+id/like_number"
            android:text="26"
            android:textColor="@color/main_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@+id/like"
            app:layout_constraintStart_toEndOf="@+id/like"/>

        <ImageView
            android:id="@+id/view_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/view_mark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"/>

        <TextView
            android:id="@+id/view"
            android:text="@string/view"
            android:textColor="@color/main_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@+id/like"
            app:layout_constraintStart_toEndOf="@+id/view_mark"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/view_number"
            android:text="26"
            android:textColor="@color/main_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/made_user"
            app:layout_constraintEnd_toStartOf="@+id/main_image"/>

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_recipe_main_image"
            android:src="@drawable/food_example"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/recipe_name"
            android:text="@string/recipe_name"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:shadowRadius="7.0"
            android:shadowDx="7.0"
            android:shadowDy="7.0"
            android:shadowColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/main_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>