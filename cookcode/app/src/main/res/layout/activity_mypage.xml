<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <ImageView
        android:id="@+id/before_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/before_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:text="Test"
        android:textSize="30sp"
        android:textColor="@color/main_theme"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/profile_top"
        app:layout_constraintStart_toEndOf="@+id/before_arrow"/>

    <TextView
        android:id="@+id/profile_top"
        android:text="@string/hello_user"
        android:textSize="30sp"
        android:textColor="@color/main_theme"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_name"/>

    <TextView
        android:id="@+id/made_own_recipe"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/made_own_recipe"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center|start"
        android:background="@drawable/round_component_clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/before_arrow"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/logout"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center|start"
        android:background="@drawable/round_component_clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/made_own_recipe"/>

    <TextView
        android:id="@+id/btn_delete_user"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/delete_user"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center|start"
        android:background="@drawable/round_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>